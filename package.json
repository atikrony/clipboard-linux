{
  "name": "mint-clipboard",
  "version": "1.0.0",
  "description": "Windows 10 style clipboard manager for Linux Mint",
  "main": "main.js",
  "homepage": "https://github.com/mint-clipboard/mint-clipboard",
  "author": {
    "name": "Mint Clipboard Team",
    "email": "support@mintclipboard.com"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-linux": "electron-builder --linux",
    "build-mac": "electron-builder --mac",
    "build-all": "electron-builder --linux --mac",
    "build-deb": "electron-builder --linux deb",
    "build-dmg": "electron-builder --mac dmg",
    "install-deps": "npm install",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "clipboard",
    "linux",
    "mint",
    "windows10",
    "electron"
  ],
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.mintclipboard.app",
    "productName": "Mint-Clipboard",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!build/**/*",
      "!test*",
      "!*.md",
      "!.git*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      },
      {
        "from": "build/postinstall.sh",
        "to": "postinstall.sh"
      },
      {
        "from": "build/postinstall-mac.sh",
        "to": "postinstall-mac.sh"
      }
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "Utility",
      "description": "Windows 10 style clipboard manager for Linux",
      "maintainer": "Mint Clipboard Team <support@mintclipboard.com>",
      "desktop": {
        "Name": "Mint Clipboard",
        "Comment": "Windows 10 style clipboard manager",
        "Categories": "Utility;Office;",
        "Keywords": "clipboard;history;paste;copy;",
        "StartupNotify": "false"
      },
      "icon": "assets/tray-icon.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "assets/tray-icon.png",
      "bundleVersion": "1.0.0"
    },
    "dmg": {
      "title": "Mint Clipboard",
      "icon": "assets/tray-icon.png",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 350,
        "height": 270
      }
    },
    "deb": {
      "depends": ["xdotool"],
      "recommends": ["libnotify-bin"],
      "afterInstall": "build/postinstall.sh",
      "fpm": [
        "--deb-systemd-restart-after-upgrade"
      ]
    }
  }
}


